<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="75dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textColor="#fff"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_ac"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="AC"
                android:textSize="24sp" />


            <Button
                android:id="@+id/bt_percent"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_divided"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="btnOperationClick"
                android:text="/"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_more"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="..."
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_seven"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_eight"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_nine"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_multiple"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="btnOperationClick"
                android:text="*"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_four"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_five"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_six"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_minus"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="btnOperationClick"
                android:text="-"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_one"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_two"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_three"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_plus"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="btnOperationClick"
                android:text="+"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bt_reverse"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_zero"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:onClick="numberClick"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bt_decimal"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text=","
                android:textSize="24sp" />


            <Button
                android:id="@+id/bt_equals"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:onClick="btnEqualsClick"
                android:text="="
                android:textColor="#fff"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>